description "coldplugs devices"
author "Mike Kelly <pioto@pioto.org>"

start on started udev

console output

script
    /sbin/udevtrigger --attr-match=dev || true
    sleep 0.5
    
    /sbin/udevtrigger || true
    sleep 0.5
    
    /sbin/udevsettle --timeout=10

    mount -n -t usbfs -o devgid=23,devmode=664 /proc/bus/usb
end script

